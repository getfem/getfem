function die {
    echo "ERROR: $1";
    exit 1
}

do_rmdir=0
do_delete=0
do_mrproper=0

if [ "$srcdir" == "" ]; then
  srcdir="."
fi

me=$((cd $srcdir && git ls-remote) 2>&1| grep "git.sv.gnu.org" | awk -F"//" '{print $2}' | awk -F"@" '{print $1}')
if [ "$me" == "" ]; then
  me=$((cd $srcdir && git ls-remote) 2>&1| grep "git.sv.gnu.org" | awk -F" " '{print $2}' | awk -F"@" '{print $1}')
fi
echo "Savannah login : $me"
if [ "$me" == "" ]; then
#  me="renard"
  die "Cannot determine Savannah login in upload_documentation"
fi

while test "$#" -gt 0; do
  case $1 in
    --mrproper)
        do_mrproper=1
        ;;
    --delete)
        do_delete=1;
        ;;
    -*)
        die "wrong option: $1";
        ;;
    *)
        f=$1;
        ;;
  esac
  shift
done

options=""
if [ "$do_delete" != 0 ]; then
  options="$options --delete"
fi

if [ "$do_mrproper" != 0 ]; then
  mkdir -p /tmp/toto00
  cd /tmp/toto00 || die "arg"
  rsync --delete  -rtv --rsh="ssh" "." "$me@dl.sv.nongnu.org:/releases/getfem/doc/"
fi

if [ "$f" != "" ]; then
  echo "uploading directory $f to dl.sv.nongnu.org:/releases/getfem/doc/"
  chmod -R a+rw $f
  rsync $options  -rtv --rsh="ssh" "$f" "$me@dl.sv.nongnu.org:/releases/getfem/doc/"
fi
